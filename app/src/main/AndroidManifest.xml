<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extralarge.fujitsu.xl">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" >
    </uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReporterSection.BecomeReporter"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ReporterSection.ReporterLogin" />
        <activity android:name=".ReporterSection.Verifyotp" />
        <activity
            android:name=".ReporterSection.ReporterDashboard"
            android:label="@string/title_activity_reporter_dashboard"
            android:theme="@style/AppTheme"></activity>


        <receiver android:name=".AutomaticSmsRead.SmsReceiver">
        <intent-filter android:priority="99999" >
            <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
        </intent-filter>
    </receiver>


    </application>



</manifest>